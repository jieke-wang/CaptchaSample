@{
    ViewData["Title"] = "Home Page";
    string defaultSrc = "data:image/gif;base64,";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<ol class="captcha-list">
    <li><img src="@defaultSrc" alt="泡泡中文验证码" data-src="/Captcha/BubbleCode" /> <input type="text" class="captcha-text"> <button>验证</button></li>
    <li><img src="@defaultSrc" alt="数字字母组合验证码" data-src="/Captcha/HybridCode" /> <input type="text" class="captcha-text"> <button>验证</button></li>
    <li><img src="@defaultSrc" alt="gif泡泡中文验证码" data-src="/Captcha/GifBubbleCode" /> <input type="text" class="captcha-text"> <button>验证</button></li>
    <li><img src="@defaultSrc" alt="gif数字字母组合验证码" data-src="/Captcha/GifHybridCode" /> <input type="text" class="captcha-text"> <button>验证</button></li>
</ol>

<style>

    .captcha-list {
        width: 80%;
        margin: 0 auto;
        text-align: center;
    }

        .captcha-list > li {
            margin: 10px 0;
        }

        .captcha-list > li > .captcha-text {
            margin: 10px;
        }
</style>

@section Scripts
{
    <script src="~/js/md5.js" asp-append-version="true"></script>
    <script>
        (function ($) {
            // https://blog.csdn.net/qq_37568049/article/details/80736305
            function guid() {
                return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function (c) {
                    var r = Math.random() * 16 | 0, v = c == 'x' ? r : (r & 0x3 | 0x8);
                    return v.toString(16);
                });
            }

            function setCaptchaKey(key, value){
                localStorage.setItem(key, value);
            }

            function getCaptchaValue(key){
                return localStorage.getItem(key);
            }

            function changeCaptcha(el){
                var g = guid();
                el.attr("src", `${el.data("src")}?g=${g}`);
                setCaptchaKey(md5(el.data("src")), g);
            }

            function verifyCaptcha(type, captcha){
                var g = getCaptchaValue(md5(type)),
                    c = captcha;
                
                $.ajax({
                    url: `/Captcha/Verify?g=${g}&c=${c}`,
                    async: false,
                    success: function(data){
                        alert(data);
                    }
                });
            }

            $('.captcha-list > li').on("click", "img", function () {
                var $this = $(this);
                changeCaptcha($this);
            });

            $('.captcha-list > li > img').each(function () {
                var $this = $(this);
                changeCaptcha($this);
            });

            $('.captcha-list > li > button').click(function () {
                var $this = $(this),
                    $captchaText = $this.prev('.captcha-text'),
                    $img = $this.parent('li').find('img');

                @* debugger; *@
                console.log($captchaText.val());
                console.log($img.data('src'));
                verifyCaptcha($img.data('src'), $captchaText.val());
                changeCaptcha($img);
            });
        }(jQuery));
    </script>
}